pipeline {
   agent any

   stages {
      stage('Check Version of Gcloud') {
         steps {
            sh '''
	    gcloud --version
	    '''
         }
      }
      
      stage('To check docker image') {
         steps {
            sh '''
            ls dockerfile
            '''
         }
      }
      
      stage('Upload new docker image to container registry repo') {
         steps {
            sh '''
            docker tag mywebapp gcr.io/sigma-nimbus-268315/mywebapp
            '''
         }
      }
  }
}


