pipeline {
   agent any

   environment {
		PROJECT = "REPLACE_WITH_YOUR_PROJECT_ID"
		APP_NAME = "mywebapp"
		CLUSTER = "cluster-1"
		CLUSTER_ZONE = "us-cental1-c"
		IMAGE_TAG = "gcr.io/sigma-nimbus-268315/${APP_NAME}"
	}
   stages {
      stage('Check Version of Gcloud') {
         steps {
            sh '''
	    gcloud --version
	    '''
         }
      }
      
      stage('To check docker image') {
         steps {
            sh '''
            ls Dockerfile 
            '''
         }
      
       steps {
        container('kubectl') {
          // Create namespace if it doesn't exist
          sh("kubectl get nodes")
	}
     }
    } 
 }
}
